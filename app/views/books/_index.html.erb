

<div class="container">
    <% books.each do |book| %>
  　<div class="row border rounded m-0 ">
    <div class="col-2 d-flex">
      <div class="m-auto">
      <%= link_to user_path(book.user) do %>
        <%= attachment_image_tag(book.user, :profile_image, size: "40x40",  fallback: "no-image-icon.jpg") %>
      <% end %>
      </div>
    </div>
    <div class="col-10" id="book_<%= book.id%>">
        <p><%= link_to user_path(book.user) do %><%= book.user.name %><% end %></p>
        <a href="/books/#{book.id}" class="stretched-link"><%= book.body %></a>

       <div class="d-flex flex-row">
          <div class="favorite-btn d-inline p-2"><%= render "favorites/favorite-btn", book: book %></div>
          <div class="p-2 d-inline"> □<%= link_to book.book_comments.count, book_path(book) %></div>
       </div>
      </div>
    </div>
  <% end %>
</div>